# Supabase Configuration (Required for auth and database)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# App URL (Required for OAuth callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Mock Mode (Set to true for development without external services)
NEXT_PUBLIC_USE_MOCK=false

# Optional: Convex Configuration (for real-time features)
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud
CONVEX_DEPLOY_KEY=your-deploy-key

# Optional: mem0 Configuration (for memory management)
MEM0_API_KEY=your-mem0-key

# Optional: LLM API Keys (at least one recommended)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_AI_KEY=AI...